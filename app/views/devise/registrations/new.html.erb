<div class="w-25">
<h2>Registrace</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field mb-3">
    <% if @minimum_password_length %>
    <em>(heslo minimálně <%= @minimum_password_length %> znaků)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Heslo" %>
  </div>

  <div class="field mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Potvrzení hesla" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrovat", class: "btn btn-secondary" %>
  </div>
<% end %>
</div>
