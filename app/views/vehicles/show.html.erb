<div class="w-75">
  <p style="color: green"><%= notice %></p>
  <h1>Detail vozidla</h1>

  <table class="table table-hover table-bordered mt-5">
    <thead>
      <tr class="table table-secondary text-center">
        <th scope="col">Vozidlo</th>
        <th scope="col">Palivo</th>
        <th scope="col">Spotřeba (1l / 100 Km)</th>
        <th scope="col" class="text-center">Najeto celkem</th>
      </tr>
    </thead>

    <tbody>
      <tr class="text-center">
        <td><%= @vehicle.name %></td>
        <td class="text-center"><%= @vehicle.fuel_type.name %></td>
        <td class="text-center"><%= @vehicle.fuel_consumption %></td>
        <td><%= @vehicle.total_km %> Km</td>
      </tr>
    </tbody>
  </table>

  <div class="d-flex gap-2">
    <%= link_to "Zpět na vozový park", vehicles_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Upravit vozidlo", edit_vehicle_path(@vehicle), class: "btn btn-secondary" %> 
    <%= button_to "Smazat vozidlo", @vehicle, method: :delete ,class: "btn btn-outline-danger"  %>
  </div>
</div>

