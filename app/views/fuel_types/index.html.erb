<p style="color: green"><%= notice %></p>

<div class="w-50">
  <% content_for :title, "Fuel types" %>

  <h1>Druhy paliva</h1>

    <div id="fuel_types">
        <table class="table table-hover table-bordered mt-5">
          <thead class="table table-secondary">
            <tr>
              <th scope="col" class="text-center">Palivo</th>
              <th scope="col" class="text-center">Cena za litr</th>
            </tr>
          </thead>

          <tbody>
            <% @fuel_types.each_with_index do |fuel_type| %>
            <tr onclick="location.href='<%= fuel_type_path(fuel_type) %>'">
              <td><%= fuel_type.name %></td>
              <td class="text-end"><%= fuel_type.price_per_liter %> Kč</td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>


  <%= link_to "Přidat nový druh paliva", new_fuel_type_path, class: "btn btn-secondary" %>
</div>
